/**app.wxss**/
.container {
  height: 100%;
  width: 100%;
  position: fixed;/*比absolute要好，不会出现页面拉动*/
  background: rgb(54, 116, 250);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  /* padding: 200rpx 0; */
  /* box-sizing: border-box; */
} 
.bg{
  width: 100%;
  height: 100%;
  position: absolute;
  top:0;
  left: 0;
}

.today{
  width: 100%;
  height: 60%;
  /* background: aqua; */
  position: relative;
}
.weather-info-top{
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  color: white;
}
.weather-info-bottom{
  display: flex;
  flex-direction: row;
  padding: 20rpx;
  color: white;
  position: absolute;
  width: 100%;
  bottom: 10rpx;
  /* align-items: center; */
}
.weather-icons{
  margin: auto;
  text-align: center;
}
.weather-icons>image{
  width: 200rpx;
  height: 200rpx;
}
.weather-info-bottom>text{
  flex-grow: 1;
  /* background: red; */
  align-self: center;
  text-align: center;
}
.daily{
  width: 100%;
  height: 40%;
  /* background-color: pink; */
}
.daily>.srcoll-view{
  width: 100%;
  height: 100%;
  white-space: nowrap;
}
.daily>.srcoll-view .daily-item{
  width: 33%;
  height: 100%;
  display: inline-block;
  /* border-right: 1px solid #999; */
  color: white;
  padding: 10rpx;
  text-align: center;
}
.daily-item>.top{
  /* margin-bottom: 20rpx; */
  font-size: 50rpx;
}
.daily-item>.middle{
  width: 200rpx;
  height: 200rpx;
  margin: 30rpx 0 20rpx 0;
}
.daily-item>.bottom{
  margin-top: 20rpx;
}


.refresh{
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  width: 60rpx;
  height: 60rpx;
  /* 现在微信本地资源不支持背景图片的方式了 */
  /* background: url('./image/refresh.png') no-repeat; */
}

